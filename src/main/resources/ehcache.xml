<config xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.7.xsd">

    <cache-template name="default">
        <expiry>
            <!-- npr. drži thumbnail 10 minuta -->
            <ttl unit="minutes">10</ttl>
        </expiry>

        <listeners>
            <listener>
                <class>com.example.jutjubic.logger.CacheLogger</class>
                <event-firing-mode>ASYNCHRONOUS</event-firing-mode>
                <event-ordering-mode>UNORDERED</event-ordering-mode>
                <events-to-fire-on>CREATED</events-to-fire-on>
                <events-to-fire-on>UPDATED</events-to-fire-on>
                <events-to-fire-on>EXPIRED</events-to-fire-on>
                <events-to-fire-on>EVICTED</events-to-fire-on>
                <events-to-fire-on>REMOVED</events-to-fire-on>
            </listener>
        </listeners>

        <resources>
            <!-- ograniči broj thumbnail-a u memoriji -->
            <heap>200</heap>
            <offheap unit="MB">20</offheap>
        </resources>
    </cache-template>

    <cache alias="thumbnails" uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type>[B</value-type> <!-- byte[] -->
        <resources>
            <heap>200</heap>
        </resources>
    </cache>

</config>
